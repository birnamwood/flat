<header>
  <nav>
    <div class="nav-wrapper clearfix">

      <div class="brand-logo">
        <%= link_to 'Flat', root_path %>
      </div>

      <div>

        <!-- Dropdown Structure -->
        <% if end_user_signed_in? %>
          <ul id="dropdown1" class="dropdown-content">
            <li><%= link_to "マイページ", end_user_path(current_end_user) %></li>
            <li><%= link_to "ログアウト", destroy_end_user_session_path, method: :delete %></li>
          </ul>
        <% end %>

        <ul class="right hide-on-med-and-down">
        <% if end_user_signed_in? %>
            <li><%= link_to clip_path(current_end_user) do %><i class="material-icons">attach_file</i><% end %></li>
            <li><%= link_to visit_path(current_end_user) do %><i class="material-icons">directions_run</i><% end %></li>
            <li><%= link_to new_post_path do %><i class="material-icons">edit</i><% end %></li>

            <li><a class="dropdown-trigger" href="#!" data-target="dropdown1">
