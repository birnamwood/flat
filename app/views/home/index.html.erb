<div class="top">

  <div class="search clearfix">
      <div class="keyword-search">
        <h4>キーワードで検索</h4>
          <%= search_form_for @search, url: searches_path do |f| %>
            <div class="search_form_box">
              <%= f.text_field :post_name_or_end_user_nickname_or_end_user_name_cont , class: "search_form", placeholder: '検索キーワード' %>
            </div>
            <div class="search_btn_box">
              <%= button_tag :type => "submit", :class =>"btn waves-effect" do %>
                <i class="material-icons">search</i>
              <% end %>
            </div>
          <% end %>
      </div>
      <div class="tag-search">
        <h4>タグから探す</h4>
              <% @tags.each do |t| %>
                <%= link_to t.tag_name, tag_path(t), class: "chip" %>
              <% end %>
      </div>
  </div>

    <div class="map-place">
    <h4>地図から探す</h4>

      <div class="map">
        <div id="prefecture-zone">
        </div>
        <div class="region-select">
            <% @regions.each do |r| %>
              <% if r.region_name == "北海道地方"%>
                <%= link_to r.region_name, {controller: "home", action: "regions", region_id: r.id}, id:"region-button", class:"btn hokkaido", remote: true%>
              <% elsif r.region_name == "東北地方" %>
                <%= link_to r.region_name, {controller: "home", action: "regions", region_id: r.id}, id:"region-button", class:"btn tohoku", remote: true %>
              <% elsif r.region_name == "北陸地方" %>
                <%= link_to r.region_name, {controller: "home", action: "regions", region_id: r.id}, id:"region-button", class:"btn hokuriku", remote: true %>
              <% elsif r.region_name == "関東地方" %>
                <%= link_to r.region_name, {controller: "home", action: "regions", region_id: r.id}, id:"region-button", class:"btn kanto", remote: true %>
              <% elsif r.region_name == "中部地方" %>
                <%= link_to r.region_name, {controller: "home", action: "regions", region_id: r.id}, id:"region-button", class:"btn tyubu", remote: true %>
              <% elsif r.region_name == "近畿地方" %>
                <%= link_to r.region_name, {controller: "home", action: "regions", region_id: r.id}, id:"region-button", class:"btn kansai", remote: true %>
              <% elsif r.region_name == "中国地方" %>
                <%= link_to r.region_name, {controller: "home", action: "regions", region_id: r.id}, id:"region-button", class:"btn tyugoku", remote: true %>
              <% elsif r.region_name == "四国地方" %>
                <%= link_to r.region_name, {controller: "home", action: "regions", region_id: r.id}, id:"region-button", class:"btn sikoku", remote: true %>
              <% elsif r.region_name == "九州地方" %>
                <%= link_to r.region_name, {controller: "home", action: "regions", region_id: r.id}, id:"region-button", class:"btn kyusyu", remote: true %>
              <% elsif r.region_name == "沖縄地方" %>
                <%= link_to r.region_name, {controller: "home", action: "regions", region_id: r.id}, id:"region-button", class:"btn okinawa", remote: true %>
              <% else %>
                <%= link_to r.region_name, {controller: "home", action: "regions", region_id: r.id}, class:"btn other-region" %>
              <% end %>
            <% end %>
        </div>
      </div>

    </div>

</div>